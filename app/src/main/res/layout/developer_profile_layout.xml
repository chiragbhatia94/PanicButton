                android:layout_height="wrap_content"
                android:text="@string/ayushi_chaturvedi"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/logoColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medi_caps_institute_of_science_amp_technology_indore"/>

            <TextView
                android:id="@+id/emailAyushi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chaturvedi_ayushi28_gmail_com"
                android:textColor="@color/linkColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arshita_jain"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/logoColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medi_caps_institute_of_science_amp_technology_indore"/>

            <TextView
                android:id="@+id/emailArshita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arshitajain12_gmail_com"
                android:textColor="@color/linkColor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chirag_bhatia"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/logoColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medi_caps_institute_of_science_amp_technology_indore"/>

