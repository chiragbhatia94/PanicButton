        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hardik_dixit"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/logoColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medi_caps_institute_of_science_amp_technology_indore"/>

            <TextView
                android:id="@+id/emailHardik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hardikdixit187_gmail_com"
                android:textColor="@color/linkColor"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>