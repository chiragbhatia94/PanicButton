<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailedEmergencyView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/stepsRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp"
        android:background="@drawable/idp_round_button_background"
        android:drawableLeft="@drawable/ic_arrow_back_white_24dp"
        android:drawableStart="@drawable/ic_arrow_back_white_24dp"
        android:padding="6dp"/>
</RelativeLayout>